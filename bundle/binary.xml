<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>bundle</id>
    <formats>
        <format>zip</format>
    </formats>
    <baseDirectory>emalko</baseDirectory>
    <includeBaseDirectory>false</includeBaseDirectory>


    <fileSets>
       <fileSet>
            <directory>.</directory>
            <outputDirectory>Emalko</outputDirectory>
            <includes>
                <include>product-deploy.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>Emalko/emalko</outputDirectory>
            <includes>
                <include>module-deploy.xml</include>
                <include>module-version.xml</include>
            </includes>
        </fileSet>
        <!-- documentation -->
        <fileSet>
            <directory>../documentation</directory>
            <outputDirectory>Emalko/documentation</outputDirectory>
        </fileSet>
        <!-- datainstall -->
        <fileSet>
            <directory>../datainstall</directory>
            <outputDirectory>Emalko/emalko/datainstall</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../service/target</directory>
            <outputDirectory>Emalko/emalko/services</outputDirectory>
            <includes>
                <include>*.war</include>
                <include>*.jar</include>
            </includes>
        </fileSet>
    </fileSets>

    <dependencySets>
        <!-- database -->
        <dependencySet>
            <includes>
                <include>ru.diasoft.micro:emalko-db</include>
            </includes>
            <unpack>false</unpack>
            <outputDirectory>Emalko/emalko/database</outputDirectory>
            <outputFileNameMapping>db-manager-${artifact.version}.${artifact.extension}</outputFileNameMapping>
        </dependencySet>
    </dependencySets>
</assembly>