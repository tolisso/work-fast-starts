<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog logicalFilePath="db.changelog-1.0.xml"
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

  <changeSet id="9" author="tolisso">
    <preConditions onFail="MARK_RAN">
      <not>
        <tableExists tableName="appuser"/>
      </not>
    </preConditions>
    <comment>creating table `appuser`</comment>
    <createTable tableName="appuser">
      <column name="id" autoIncrement="1" type="bigint">
        <constraints primaryKey="true"/>
      </column>
      <column name="name" type="varchar(255)">
        <constraints nullable="false" unique="true"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet id="10" author="tolisso">

    <preConditions onFail="MARK_RAN">
      <and>
        <tableExists tableName="appuser"/>
        <columnExists tableName="appuser" columnName="name"/>
      </and>
    </preConditions>
    <createIndex tableName="appuser" indexName="appuser_name_index">
      <column name="name"/>
    </createIndex>
    <addAutoIncrement columnDataType="bigint" tableName="appuser" columnName="id"/>
  </changeSet>

</databaseChangeLog>